@import "~@/utils/config.styl"

Wrapper()
  position relative
  width 100%
  overflow hidden

Wrapper-background(width = 1920px)
  display block
  position relative
  width width
  left 50%
  margin-left (width / -2)
  z-index 0

Title(size = 1, width = 500px, align = left, color = $FONT_DEFAULT_COLOR)
  if width == auto
    width auto
  else
    width width
  font-size $FONT_H + size + _SIZE
  text-align align
  color color
  display block
  position relative
  if align == center
    margin 0 auto
  else if align = right
    margin 0 0 0 auto

Item-centered(width = 1200px, height = 100px, y = 0, x = 0, z-index = 10)
  display block
  width width
  height height
  position absolute
  top y
  left 50%
  margin-left (width / -2)
  transform translateX(x)
  z-index z-index

Pseudo(align = left, align_num = 0, top = 0)
  content ''
  display block
  position absolute
  top top
  z-index 10
  if align == left
    left align_num
  else if align == right
    right align_num  