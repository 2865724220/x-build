@import "../utils/reset.styl"
@import "../utils/x-load.styl"

center(w, h, t)
  position absolute
  left 50%
  top 50%
  width w
  height h
  margin-left (w / -2)
  margin-top (h / -2 + t)

body,html
  width 100%
  height 100%
body
  background #2C3643
  .container
    position relative
    width 100%
    height 100%
    .logo
      center(320px, 249px, -150)
      background-repeat no-repeat
      background-position center center
      background-size 60px
    .title
      position absolute
      top 50%
      width 100%
      text-align center
      color #fff
      text-shadow 3px 3px 2px #75A7BB
      & span
        margin-left 12px
        font-size 24px
    .bg
      position absolute
      z-index -1
      width 100%
      height 100%
      left 0
      top 0